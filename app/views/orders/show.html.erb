<div class="row">
	<div class="col-md-12" style="background-color: #292b2c; color:white; margin-bottom: 20px">
		<h1>Foods Order : </h1>
	</div>
	<p id="notice">
		<%= notice %>
	</p>

	<div class="col-md-12">
		<div class="table-responsive">
			<table class="table table-striped">
			  <thead>
			    <tr>
			      <th>Food</th>
			      <th>image</th>
			      <th>Price</th>
			      <th>remove</th>
			    </tr>
			  </thead>
			
			  <tbody>
			    <% @order.order_details.each do |order_detail| %>
			      <tr>
			        <td><%= order_detail.food_item.name %></td>
			        <td><img src="<%= order_detail.food_item.image_url %>" height="80px" width="80px"/></td>
			        <td><%= number_with_delimiter(order_detail.price) %> VND</td>
			       	<td><a class="btn btn-danger" href="/order_details/delete/<%= order_detail.id.to_s %>">Remove</td>
			      </tr>
			    <% end %>
			    <tr>
			    	<td colspan="2" class="text-left">SUM ORDER :</td>
			    	<td colspan="2" class="text-left"><%= number_with_delimiter(@sum) %> VND</td>
			    </tr>
			  </tbody>
			</table>
		</div>
		<a class="btn btn-success" href="/" style="margin-bottom: 20px">ADD MORE FOOD</a>
	</div>
	<div class="col-md-12" style="background-color: #292b2c; color:white; margin-bottom: 20px">
		<h1>Insert your information : </h1>
	</div>
	<div class="col-md-5">
		
		<form action="/orders/update/<%= @order.id.to_s %>" name="addReview">
			<div class="form-group">
				<label for="title">Name</label>
				<input class="form-control" type="text" name="order[name]" />
			</div>
			<div class="form-group">
				<label for="title">Address</label>
				<input class="form-control" type="text" name="order[address]" />
			</div>
			<div class="form-group">
				<label for="title">Phone</label>
				<input class="form-control" type="text" name="order[phone]" />
			</div>
			<div class="form-group">
				<label for="title">Email</label>
				<input class="form-control" type="text" name="order[email]" />
			</div>
			<div class="form-group">
				<label for="title">COUPON FOR DISCOUNT(if have)</label>
				<input class="form-control" type="text" name="order[coupon]" />
			</div>
			<div class="actions">
				<input type="hidden" name="order[order_id]" value="<%= @order.id %>" />
				<input type="submit" />
			</div>
		</form>
	</div>

</div>

</p>
