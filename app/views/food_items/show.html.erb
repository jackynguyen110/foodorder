<div class="row">
	<div class="col-md-12" style="background-color: #292b2c; color:white; margin-bottom: 20px">
		<h1>FOOD DETAIL </h1>
	</div>
	<div class="col-md-5">
		<img src="<%= @food_item.image_url %>">
	</div>
	<div class="col-md-7">
		<h2>Name :<%= @food_item.name %></h2>
		<p>
			<strong>Price : </strong><%= @food_item.price %> VND
		</p>
		<p>
			<strong>Description : </strong><%= @food_item.description %>
		</p>
		<a href="/order_details/add/<%= @food_item.id.to_s %>" class="btn btn-success">Oder Now</a>
	</div>

	<div class="col-md-12" style="background-color: #292b2c; color:white; margin-bottom: 20px; margin-top:20px">
		<h1>REVIEW </h1>
	</div>
	<div class="col-md-5">
		<p id="notice">
			<%= notice %>
		</p>

		<form action="/reviews/new" name="addReview">
			<div class="form-group">
				<label for="title">Title</label>
				<input class="form-control" type="text" name="review[title]" />
			</div>
			<div class="form-group">
				<label for="title">Description</label>
				<input class="form-control" type="text" name="review[content]" />
			</div>
			<div class="form-group">
				<label for="title">Rating</label>
				<%= select_tag "review[rating]", options_for_select([1,2,3,4,5]) , class:'form-control'%>
			</div>
			<div class="actions">
				<input type="hidden" name="review[food_item_id]" value="<%= @food_item.id %>" />
				<input type="submit" />
			</div>
		</form>
	</div>
	<div class="col-md-7">
		<% @food_item.reviews.each do |review| %>
		<div class="card">
		 <div class="card-block">
		    <h4 class="card-title">Name : <%= review.title %></h4>
		    <h6 class="card-subtitle mb-2 text-muted">Rating :<%= review.rating %> stars</h6>
		    <p class="card-text"><%= review.content %>.</p>
		  </div>
		</div>
		<% end %>
	</div>
</div>

</p>

<%= link_to 'Edit', edit_food_item_path(@food_item) %> |
<%= link_to 'Back', food_items_path %>
