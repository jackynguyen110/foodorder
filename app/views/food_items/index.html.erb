<p id="notice"><%= notice %></p>

<div class="mt-3">
	<h1>Food Item</h1>
</div>
<div class="table-responsive">
	<table class="table table-striped">
	  <thead>
	    <tr>
	      <th>Name</th>
	      <th>Description</th>
	      <th>Price</th>
	      <th>Section</th>
	      <th>Image url</th>
	      <th colspan="3"></th>
	    </tr>
	  </thead>
	
	  <tbody>
	    <% @food_items.each do |food_item| %>
	      <tr>
	        <td><%= food_item.name %></td>
	        <td><%= food_item.description %></td>
	        <td><%= food_item.price %></td>
	        <td><%= food_item.section.name%></td>
	        <td><%= food_item.image_url %></td>
	        <td><%= link_to 'Show', food_item %></td>
	        <td><%= link_to 'Edit', edit_food_item_path(food_item) %></td>
	        <td><%= link_to 'Destroy', food_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
</div>
<br>

<%= link_to 'New Food Item', new_food_item_path, class:"btn btn-lg btn-success" %>
